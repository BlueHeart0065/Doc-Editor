<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doc Editor</title>
    <link rel="stylesheet" href="/styles/Index.css">
    <link rel="stylesheet" href="/styles/templates/topbar.css">
</head>

<body>
    <div class="topbar">
        <a class="logo" href="/docs"><img src="/images/logo.svg" alt=""></a>
        <div class="brand">Doc Editor</div>
        <div class="search">
            <input type="text" id="search-bar" placeholder="Search documents...">
            <img src="/images/search.svg" alt="">
        </div>
        <div class="options">
            <a href="/docs">Dashboard</a>
            <a href="/docs">Projects</a>
            <a href="/docs">Friends</a>
            <a href="/docs">Settings</a>
        </div>
        <div class="profile" href="/docs">
            <img src="/images/sahil.png" alt="" class="profile-pic">
            <div class="name">Sahil Batgeri</div>
        </div>
    </div>

    <!-- Search Results Container -->
    <div class="search-results" id="search-results" style="display: none;">
        <div class="search-header">
            <h3>Search Results</h3>
            <button id="close-search" class="close-btn">&times;</button>
        </div>
        <ul id="Doc-list"></ul>
    </div>

    <div class="hero">
        <div class="header">
            <p>Documents</p>
            <form action="/docs/new" method="post">
                <button name="new" id="new">+ New Doc</button>
            </form>
        </div>
        <div class="details">
            <p><span id="doc-count"><%= docs.length %></span> Documents</p>
            <div class="sort-container">
                <img src="/images/sort.svg" alt="">
                <select name="sort" id="sort">
                    <option value="Date modified">Date modified</option>
                    <option value="Date created">Date created</option>
                    <option value="A-Z">A-Z</option>
                </select>
            </div>
        </div>

        <div class="document-container" id="document-container">
            <% for (let doc of docs) {%>
                <div class="document-wrapper">
                    <a class="document" href="/docs/<%= doc.id %>/edit">
                        <div class="title">
                            <p><%= doc.title%></p>
                        </div>
                    </a>
                    <div class="document-actions">
                        <button class="delete-btn" data-id="<%= doc.id %>" title="Delete document">üóëÔ∏è</button>
                        <button class="duplicate-btn" data-id="<%= doc.id %>" title="Duplicate document">üìÑ</button>
                        <span class="last-modified">Modified: <%= new Date(doc.updatedAt).toLocaleDateString() %></span>
                    </div>
                </div>
            <% } %>
            
            <% if (docs.length === 0) { %>
                <div class="no-documents">
                    <p>No documents found. Create your first document to get started!</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmation-modal" class="modal" style="display: none;">
        <div class="modal-content">
            <h3>Confirm Deletion</h3>
            <p>Are you sure you want to delete this document? This action cannot be undone.</p>
            <div class="modal-actions">
                <button id="confirm-delete" class="danger-btn">Delete</button>
                <button id="cancel-delete" class="cancel-btn">Cancel</button>
            </div>
        </div>
    </div>

    <script src="/scripts/search.js"></script>
    <script src="/scripts/sort.js"></script>
    <script src="/scripts/documents.js"></script>
    
</body>

</html>