<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/Edit.css">
    <link rel="stylesheet" href="/styles/templates/topbar.css">

</head>
<body>
    <div class="topbar">
        <a class="logo" href="/docs"><img src="/images/logo.svg" alt=""></a>
        
        <div class="options">
            <a href="/docs">Dashboard</a>
            <a href="/docs">Projects</a>
            <a href="/docs">Friends</a>
            <a href="/docs">Settings</a>
        </div>
        <div class="profile" href="/docs">
            <img src="/images/sahil.png" alt="" class="profile-pic">
            <div class="name">Sahil Batgeri</div>
        </div>
    </div>
    
    <span id="id" style="display: none;"><%= id %></span>
    <input type="text" name = "title" id="title" value="<%= doc.title  %>">
    <div id="editor" name="editor" contenteditable="true">
        <%- doc.content  %>
    </div>

    <div class="online" id="online"></div>
    <a href="/docs"><button>Go Back</button></a>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="/scripts/autosave.js"></script>
    <script src="/scripts/quill.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const documentId = '<%= id %>';

        // Join the document-specific room
        socket.emit('join document', documentId);

        // Listen for other users joining
        socket.on('user connected', (message) => {
            const div = document.createElement('div');
            div.textContent = 'User Online';
            document.getElementById('online').appendChild(div);
        });

        // Listen for other users disconnecting
        socket.on('user disconnected', (message) => {
            const div = document.createElement('div');
            div.textContent = message;
            document.getElementById('notifications').appendChild(div);
        });
    </script>
</body>
</html>